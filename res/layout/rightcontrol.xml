<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_width="wrap_content">
        <Button android:text="R" android:layout_height="wrap_content" android:id="@+id/rcright" android:layout_width="wrap_content" android:layout_below="@+id/rcup" android:layout_toRightOf="@+id/rcup"></Button>
        <Button android:text="L" android:layout_height="wrap_content" android:id="@+id/rcleft" android:layout_width="wrap_content" android:layout_below="@+id/rcup" android:layout_alignParentLeft="true"></Button>
        <Button android:text="U" android:layout_height="wrap_content" android:id="@+id/rcup" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/rcleft"></Button>
        <Button android:text="D" android:layout_height="wrap_content" android:id="@+id/rcdown" android:layout_width="wrap_content" android:layout_below="@+id/rcleft" android:layout_toRightOf="@+id/rcleft"></Button>
    </RelativeLayout>
    
</LinearLayout>
